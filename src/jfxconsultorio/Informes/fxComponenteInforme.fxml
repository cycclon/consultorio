                  <Tooltip  text="Seleccione un componente para insertar" />
               </tooltip></ComboBox>
            <Label fx:id="lblCodigo" text="Copiar y pegar el código:" visible="false" />
            <TextField fx:id="txtCodigo" prefWidth="100.0" visible="false">
               <tooltip>
                  <Tooltip  text="Copie y pegue el código en el informe" />
               </tooltip></TextField>
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../Estilos/fxlogin.css" />
      <URL value="@../Estilos/fxObraSocial.css" />
   </stylesheets>
</AnchorPane>
