<AnchorPane id="AnchorPane" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jfxconsultorio.Informes.ctrlComponenteInforme">
   <children>
      <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Insertar componente de informe:" />
            <ComboBox fx:id="cbComponente" maxWidth="1.7976931348623157E308" onAction="#cbComponente_SelectedItemChanged" promptText="-- Seleccionar componente --">
