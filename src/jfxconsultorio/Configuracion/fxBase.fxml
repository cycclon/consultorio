<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.net.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jfxconsultorio.Configuracion.ctrlBase">
   <children>
      <Label fx:id="lblMensaje" alignment="CENTER" maxWidth="1.7976931348623157E308" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <VBox alignment="CENTER" fillWidth="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
         <children>
            <Label text="Ingrese el nombre o dirección IP del servidor de base de datos (si no lo conoce, póngase en contacto con el administrador del sistema):" />
            <TextField fx:id="txtServidor" prefWidth="250.0" promptText="Direccion IP / Nombre de servidor">
               <tooltip>
                  <Tooltip text="Escriba en este campo la dirección IP o el nombre de la &#10;computadora que tiene instalada la base de datos. &#10;Si no lo conoce,póngase en contacto con el administrador del sistema." />
               </tooltip></TextField>
            <Button fx:id="btnProbar" defaultButton="true" mnemonicParsing="false" onAction="#btnProbar_Click" text="Probar conexión">
               <tooltip>
                  <Tooltip text="Presione este botón para probar la conexión con el servidor de base de datos." />
               </tooltip>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Imagenes/Iconos/conexion.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <HBox alignment="BOTTOM_RIGHT" maxWidth="1.7976931348623157E308" prefHeight="100.0">
               <children>
                  <Button fx:id="btnEstablecer" defaultButton="true" mnemonicParsing="false" onAction="#btnEstablecar_Click" text="Establecer servidor">
                     <tooltip>
                        <Tooltip text="Presione este botón para establecer el servidor &#10;de base de datos y comenzar a utilizar el sistema." />
                     </tooltip>
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Imagenes/Iconos/ok.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../Estilos/fxlogin.css" />
      <URL value="@../Estilos/fxObraSocial.css" />
   </stylesheets>
</AnchorPane>
